{
  "name": "starwars-search",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.5",
    "axios": "^0.18.0",
    "debounce": "^1.2.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-spring": "^8.0.18",
    "react-transition-group": "^2.7.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.16.0",
    "customize-cra": "^0.2.12",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.11.0",
    "jest-enzyme": "^7.0.2",
    "prettier": "^1.16.4",
    "prop-types": "^15.7.2",
    "react-app-rewired": "^2.1.0",
    "react-hot-loader": "^4.8.0",
    "react-scripts": "^2.1.8",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom --watch",
    "test:coverage": "npm run test -- --coverage",
    "precommit": "lint-staged",
    "lint": "eslint src/ --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "coveragePathIgnorePatterns": [
      "src/components/blocks/Header/index.js",
      "src/components/blocks/Button/index.js",
      "src/registerServiceWorker.js"
    ],
    "moduleNameMapper": {
      "^components(.*)$": "<rootDir>/src/components$1",
      "^containers(.*)$": "<rootDir>/src/containers$1",
      "^styles(.*)$": "<rootDir>/src/styles$1",
      "^services(.*)$": "<rootDir>/src/services$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^images(.*)$": "<rootDir>/src/images$1",
      "^ducks(.*)$": "<rootDir>/src/redux/ducks$1"
    }
  }
}
